<div class="container">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>id</th>
				<th>name</th>
			</tr>
		</thead>
		<tbody>
			<% @community.each do |com| %>
			<tr>
				<td><%= com.id %></td>
				<td><%= com.body %></td>
				
				<td>
				<%= link_to "[編集]","/lounge/#{com.id}/edit",method: :get%>　
				<%= link_to "[削除]","/lounge/#{com.id}", method: :delete %>
				
				</td>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<button type="button" class="btn btn-primary btn-xs"
	 onclick="location.href='/lounge/new'">追加</button>

	 <button type="button" class="btn btn-primary btn-xs"
	 onclick="location.href='/lounge'">戻る</button>

</div>