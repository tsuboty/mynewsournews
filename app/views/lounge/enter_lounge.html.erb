<%= javascript_include_tag "application" %>
<div class="container">
	<ol class="breadcrumb">
		  <li><a href="/">Home</a></li>
		  <li><a href="/lounge">コミュニティ</a></li>
		   <li><a href="/<%= @community.id %>"><%= @community.body %></a></li>	  
	</ol>

	<h4><%= @com_name %>トッピックス一覧</h4>

	<div class="row">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>No</th>
					<th>headline</th>
				</tr>
			</thead>

			<tbody>

				<% @community.articles.each do |article| %>
				<tr>
					<td width="50px"><%= article.id %></td>
					<td>
					<a href="/lounge/<%=@community.id %>/<%= article.id %>"><%= article.headline  %></a>

						<!-- ラベル -->
						<% com_count = 0 %>
						 
						<% 

						article.comments.each do |c|
							 if c.community_id == @community.id 
								com_count = com_count + 1
							 end
						end 
						%>
						
						<span class="label label-warning" style="margin-left:20px;"><%= com_count %></span>

					</td>
					<td>
					<%= link_to '[削除]', "/lounge/"+ @community.id.to_s + "/" + article.id.to_s , method: :delete %>
					
					</td>
				</tr>
				<% end %>

			</tbody>
		</table>

		<div align="right" style="margin:20px 20px 20px 0;">
		<button type="button" class="btn btn-info btn-xs btn-w"  
			onclick="location.href='/lounge'">戻る

		</button>


		<button type="button" class="btn btn-primary btn-xs btn-w" 
			onclick="location.href='/lounge/<%= @community.id %>/new'">トピックを追加

		</button>


		</div>
		
		</div>
	</div>
</div>



	
	
